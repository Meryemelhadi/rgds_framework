<?xml version="1.0"?> 
<nxl version="1.0"
	xmlns="http://www.nxfrontier.com/nxl/nxl" 
	xmlns:nxl="http://www.nxfrontier.com/nxl/nxl" 
	xmlns:compil="http://www.nxfrontier.com/nxl/compil" 
	xmlns:xo="http://www.nxfrontier.com/xo/core"
	xmlns:html="http://www.w3.org/TR/REC-html40"
	xmlns:format="http://www.nxfrontier.com/nxl/format"
	xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
	>

<xo:taglib uri="http://www.nxfrontier.com/nxl/passord">

	<xo:tag name="create">
		$pwd=$this->getPlugIn('Password');
		$pwd->createEasyPassword(<xsl:value-of select="@length" />);
	</xo:tag>

</xo:taglib>

</nxl>